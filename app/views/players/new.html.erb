<div class="container">
  <div class="row">
    <div class="col-md-5 col-md-12">
      <%= form_for ["owner", @player] do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label 'Description' %>
        <%= f.text_field :description, class: 'form-control' %>

        <%= f.label 'Image URL' %>
        <%= f.text_field :player_image_url, class: 'form-control' %>

        <%= f.submit "Save changes", class: "btn btn-primary" %>

      <% end %>
    </div>
  </div>
</div>
