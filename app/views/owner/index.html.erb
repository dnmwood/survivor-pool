<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <script src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js'></script>
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <title>Survivor Fantasy</title>
  </head>
  <body>

    <audio src="assets/survivor.mp3" autoplay>
    </audio>

    <div class="container home-container">
        <div class="row vertical-align">
          <!-- <div class="col-md-4 col-md-12"> -->
            <% @owners.each do |x| %>
              <div class="col-sm-4">
                <!-- <div class="image-container">
                  <%= link_to image_tag(x.image_url), owner_path(x) %>
                </div> -->
                <br>
                <div class="home-text">
                  <%= x.teams.first.name %>
                  <br>
                  <%= link_to 'add player', new_owner_team_player_path(owner_id = x.id, team_id = x.teams.first.id) %>
                  <br>

                  <!-- HERE WE'RE GONNA LOOP THROUGH TEAM PLAYERS -->
                  <div class="player-table">

                    <% teamPlayers = x.teams.first.players %>
                    <% if teamPlayers.length > 0 %>

                    <table class="table">
                      <thead>
                        <tr>
                          <th scope="col">Player</th>
                          <th scope="col">Points</th>


                        </tr>
                      </thead>

                      <% teamPlayers.each do |player| %>

                      <% totalPoints = (player.hidden_immunities * 5) + (player.hidden_immunity_successes * 3) + (player.individual_immunities * 5) + (player.tribal_immunities * 2) + (player.rewards * 3) + (player.days) %>
                      <% if player.jury_member == true %>
                        <% totalPoints += 3 %>
                      <% end %>

                      <% if player.winner == true %>
                        <% totalPoints += 25 %>
                      <% elsif player.second_place == true %>
                        <% totalPoints += 15 %>
                      <% elsif player.third_place == true %>
                        <% totalPoints += 10 %>
                      <% end %>

                      <% if player.season_favourite == true %>
                        <% totalPoints += 10 %>
                      <% end %>

                      <% if player.medical_evac == true %>
                        <% totalPoints += 5 %>
                      <% end %>

                      <% if player.quitter == true %>
                        <% totalPoints -= 10 %>
                      <% end %>
                        <tbody>

                          <tr>
                            <th scope="row"><%= player.name %></th>
                            <td><%= totalPoints %></td>
                          </tr>

                        </tbody>
                      <% end %>
                      </table>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          <!-- </div> -->
        </div>
    </div>
  </body>
</html>
